{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "lib": ["ESNext", "dom"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "exclude": ["./node_modules"]
}
